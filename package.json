  "scripts": {
    "dev:viewer": "webpack-dev-server --content-base=www --inline --watch --env.which=VIEWER",
    "dev:editor": "webpack-dev-server --content-base=www --inline --watch --env.which=EDITOR",
    "build:viewer": "webpack --progress --env.production --env.which=VIEWER  && ls -al ./build",
    "build:editor": "webpack --progress --env.production --env.which=EDITOR  && ls -al ./build",
    "deploy:viewer": "webpack --progress --env.production --env.which=VIEWER && scp build/* doz:/var/www/infopage-viewer/html/",
